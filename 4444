// =========== STATE ===========
let lang = 'hi';
let cSec = 'chat';
let calY = new Date().getFullYear();
let calM = new Date().getMonth();
const cache = {};

// =========== THEME/LANG ===========
function toggleTheme(){
  const h = document.documentElement;
  const dark = h.getAttribute('data-theme')==='dark';
  h.setAttribute('data-theme', dark?'light':'dark');
  document.getElementById('themeBtn').textContent = dark?'ЁЯМЩ':'тШАя╕П';
}
function toggleLang(){
  lang = lang==='hi'?'en':'hi';
  document.getElementById('langBtn').textContent = lang==='hi'?'English':'рд╣рд┐рдВрджреА';
  renderCal();
}

// =========== NAV ===========
const SECS = ['chat','cal','schemes','weather','health','soil','meds','contacts'];
function showSec(id){
  SECS.forEach(s=>{ document.getElementById('s-'+s)?.classList.remove('active'); });
  document.querySelectorAll('.nav-tab').forEach((t,i)=>{ t.classList.toggle('active', SECS[i]===id); });
  document.getElementById('s-'+id).classList.add('active');
  cSec = id;
  if(id==='weather') fetchWx();
}

// =========== CALENDAR ===========
const MN_HI = ['рдЬрдирд╡рд░реА','рдлрд░рд╡рд░реА','рдорд╛рд░реНрдЪ','рдЕрдкреНрд░реИрд▓','рдордИ','рдЬреВрди','рдЬреБрд▓рд╛рдИ','рдЕрдЧрд╕реНрдд','рд╕рд┐рддрдВрдмрд░','рдЕрдХреНрдЯреВрдмрд░','рдирд╡рдВрдмрд░','рджрд┐рд╕рдВрдмрд░'];
const MN_EN = ['January','February','March','April','May','June','July','August','September','October','November','December'];
const DN_HI = ['рд░рд╡рд┐','рд╕реЛрдо','рдордВрдЧрд▓','рдмреБрдз','рдЧреБрд░реБ','рд╢реБрдХреНрд░','рд╢рдирд┐'];
const DN_EN = ['Sun','Mon','Tue','Wed','Thu','Fri','Sat'];
function renderCal(){
  const mn = lang==='hi'?MN_HI:MN_EN;
  const dn = lang==='hi'?DN_HI:DN_EN;
  document.getElementById('calTitle').textContent = `${mn[calM]} ${calY}`;
  const g = document.getElementById('calGrid');
  g.innerHTML = dn.map(d=>`<div class="cal-dname">${d}</div>`).join('');
  const first = new Date(calY,calM,1).getDay();
  const days = new Date(calY,calM+1,0).getDate();
  const t = new Date();
  for(let i=0;i<first;i++) g.innerHTML+=`<div class="cal-day other"></div>`;
  for(let d=1;d<=days;d++){
    const isT = d===t.getDate()&&calM===t.getMonth()&&calY===t.getFullYear();
    const hasEv = CAL_EVENTS[calM+1]&&(d===1||d===15);
    g.innerHTML+=`<div class="cal-day${isT?' today':''}${hasEv?' has-ev':''}" onclick="showCalEv(${d},${calM+1})">${d}</div>`;
  }
}
function showCalEv(d,m){
  const ev = CAL_EVENTS[m]; if(!ev) return;
  const box = document.getElementById('calEvBox');
  document.getElementById('calEvTitle').textContent = `ЁЯУЕ ${d} ${MN_EN[m-1]}`;
  document.getElementById('calEvTxt').textContent = lang==='hi'?ev.hi:ev.en;
  box.style.display='block';
}
function chMon(dir){ calM+=dir; if(calM<0){calM=11;calY--;} if(calM>11){calM=0;calY++;} renderCal(); }

// =========== SCHEMES ===========
function renderSchemes(f=''){
  const fl = f.toLowerCase();
  const filtered = SCHEMES.filter(s=>s.title.toLowerCase().includes(fl)||s.titleHi.includes(f)||s.desc.toLowerCase().includes(fl)||s.descHi.includes(f));
  document.getElementById('scGrid').innerHTML = filtered.map((s,i)=>`
    <div class="sc-card" onclick="openMod(${SCHEMES.indexOf(s)})">
      <div class="sc-icon">${s.icon}</div>
      <div class="sc-title">${s.titleHi} / ${s.title}</div>
      <div class="sc-benefit">${s.benefitHi} | ${s.benefit}</div>
      <div class="sc-desc">${s.descHi}</div>
    </div>`).join('');
}
function filterSc(v){ renderSchemes(v); }
function openMod(i){ document.getElementById('modContent').innerHTML=SCHEMES[i].detail; document.getElementById('scModal').classList.add('open'); }
function closeMod(){ document.getElementById('scModal').classList.remove('open'); }

// =========== WEATHER ===========
async function fetchWx(){
  const city = document.getElementById('locInp').value.trim()||'Lucknow';
  const el = document.getElementById('wxBox');
  el.innerHTML = '<div style="text-align:center;padding:30px;color:var(--text2);">тП│ рд▓реЛрдб рд╣реЛ рд░рд╣рд╛ рд╣реИ... / Loading...</div>';
  try {
    const geo = await fetch(`https://geocoding-api.open-meteo.com/v1/search?name=${encodeURIComponent(city)}&count=1`);
    const gd = await geo.json();
    if(!gd.results?.length) throw new Error('City not found / рд╢рд╣рд░ рдирд╣реАрдВ рдорд┐рд▓рд╛');
    const {latitude:lat,longitude:lon,name,country} = gd.results[0];
    const wr = await fetch(`https://api.open-meteo.com/v1/forecast?latitude=${lat}&longitude=${lon}&current=temperature_2m,relative_humidity_2m,wind_speed_10m,precipitation,weather_code&daily=weather_code,temperature_2m_max,temperature_2m_min&timezone=auto&forecast_days=7`);
    const w = await wr.json();
    const c = w.current;
    const wico = wxIcon(c.weather_code);
    const wdsc = wxDesc(c.weather_code);
    const fcHTML = w.daily.time.slice(1,6).map((dt,i)=>{
      const day = new Date(dt).toLocaleDateString('en',{weekday:'short'});
      return `<div class="fc-item"><div class="fc-day">${day}</div><div class="fc-icon">${wxIcon(w.daily.weather_code[i+1])}</div><div class="fc-temp">${Math.round(w.daily.temperature_2m_max[i+1])}┬░/${Math.round(w.daily.temperature_2m_min[i+1])}┬░</div></div>`;
    }).join('');
    el.innerHTML = `
      <div class="w-card">
        <div style="font-size:58px;margin-bottom:6px;">${wico}</div>
        <div class="w-temp">${Math.round(c.temperature_2m)}┬░C</div>
        <div class="w-desc">${wdsc} тАФ ${name}, ${country}</div>
        <div class="w-stats">
          <div class="w-stat"><div class="w-val">${c.relative_humidity_2m}%</div><div class="w-lbl">ЁЯТз Humidity</div></div>
          <div class="w-stat"><div class="w-val">${c.wind_speed_10m}<span style="font-size:12px">km/h</span></div><div class="w-lbl">ЁЯТи Wind</div></div>
          <div class="w-stat"><div class="w-val">${c.precipitation}<span style="font-size:12px">mm</span></div><div class="w-lbl">ЁЯМз Rain</div></div>
          <div class="w-stat"><div class="w-val">${getAQI(c)}</div><div class="w-lbl">ЁЯУК Status</div></div>
        </div>
      </div>
      <h3 style="font-size:13.5px;font-weight:700;margin-bottom:8px;color:var(--text2);">ЁЯУЕ 5-Day Forecast / 5 рджрд┐рди рдХрд╛ рдкреВрд░реНрд╡рд╛рдиреБрдорд╛рди</h3>
      <div class="forecast">${fcHTML}</div>
      <div style="background:var(--card);border:1px solid var(--border);border-radius:var(--radius);padding:13px;margin-top:14px;">
        <h4 style="font-size:13px;font-weight:700;margin-bottom:7px;color:var(--gold);">ЁЯМ╛ рдХреГрд╖рд┐ рд╕рд▓рд╛рд╣ / Farming Advice</h4>
        <div style="font-size:12.5px;color:var(--text2);line-height:1.6;">${farmAdvice(c)}</div>
      </div>`;
  } catch(e) {
    el.innerHTML = `<div style="background:var(--card);border:1px solid var(--border);border-radius:var(--radius);padding:18px;text-align:center;"><div style="font-size:32px;margin-bottom:8px;">тЪая╕П</div><p style="color:var(--text2);">рдореМрд╕рдо рдЬрд╛рдирдХрд╛рд░реА рдЙрдкрд▓рдмреНрдз рдирд╣реАрдВред / Weather unavailable.</p><p style="font-size:11px;color:var(--text3);margin-top:6px;">${e.message}</p></div>`;
  }
}
function wxIcon(c){ if(c===0)return'тШАя╕П';if(c<=2)return'тЫЕ';if(c<=3)return'тШБя╕П';if(c<=49)return'ЁЯМля╕П';if(c<=69)return'ЁЯМзя╕П';if(c<=79)return'ЁЯМия╕П';if(c<=99)return'тЫИя╕П';return'ЁЯМбя╕П'; }
function wxDesc(c){ if(c===0)return'Clear / рд╕рд╛рдл';if(c<=2)return'Partly cloudy / рдЖрдВрд╢рд┐рдХ рдмрд╛рджрд▓';if(c<=3)return'Cloudy / рдмрд╛рджрд▓';if(c<=49)return'Foggy / рдХреЛрд╣рд░рд╛';if(c<=69)return'Rain / рдмрд╛рд░рд┐рд╢';if(c<=79)return'Snow / рдмрд░реНрдл';if(c<=99)return'Thunderstorm / рдЖрдВрдзреА';return'Mixed'; }
function getAQI(c){ if(c.temperature_2m>38)return'тЪая╕ПHot';if(c.temperature_2m<10)return'тЭДя╕ПCold';return'тЬЕGood'; }
function farmAdvice(c){
  const tips=[];
  if(c.temperature_2m>38) tips.push('ЁЯМбя╕П рдЕрддреНрдпрдзрд┐рдХ рдЧрд░реНрдореА тАФ рд╕реБрдмрд╣-рд╢рд╛рдо рдкрд╛рдиреА рджреЗрдВред Extreme heat: water crops morning & evening.');
  if(c.relative_humidity_2m>80) tips.push('ЁЯТз рдЕрдзрд┐рдХ рдирдореА тАФ рдлрдВрдЧрд▓ рд░реЛрдЧ рдХреА рдирд┐рдЧрд░рд╛рдиреА рдХрд░реЗрдВред High humidity: watch for fungal disease.');
  if(c.wind_speed_10m>30) tips.push('ЁЯТи рддреЗрдЬ рд╣рд╡рд╛ тАФ рдХреАрдЯрдирд╛рд╢рдХ рд╕реНрдкреНрд░реЗ рди рдХрд░реЗрдВред Strong wind: avoid spraying.');
  if(c.precipitation>10) tips.push('ЁЯМзя╕П рдЕрдзрд┐рдХ рд╡рд░реНрд╖рд╛ тАФ рдЬрд▓ рдирд┐рдХрд╛рд╕реА рд╕реБрдирд┐рд╢реНрдЪрд┐рдд рдХрд░реЗрдВред Heavy rain: ensure drainage.');
  if(!tips.length) tips.push('тЬЕ рдореМрд╕рдо рдЦреЗрддреА рдХреЗ рд▓рд┐рдП рдЕрдиреБрдХреВрд▓ рд╣реИред Weather is favorable for farming today.');
  return tips.join('<br>');
}

// =========== HEALTH ===========
function renderHealth(){
  document.getElementById('hCards').innerHTML = HEALTH_DATA.map(h=>`
    <div class="h-card">
      <h3>${h.icon} ${h.title}</h3>
      <p>${h.content}</p>
    </div>`).join('');
}

// =========== SOIL/STATES ===========
function renderStates(){
  document.getElementById('stCards').innerHTML = STATE_CROPS.map(s=>`
    <div style="background:var(--card);border:1px solid var(--border);border-radius:var(--radius);padding:12px;">
      <h4 style="font-size:13.5px;font-weight:700;margin-bottom:7px;">${s.s}</h4>
      <p style="font-size:12px;color:var(--text2);margin-bottom:3px;">ЁЯМН <strong>Soil:</strong> ${s.soil}</p>
      <p style="font-size:12px;color:var(--text2);margin-bottom:3px;">ЁЯМ╛ <strong>Crops:</strong> ${s.crops}</p>
      <p style="font-size:12px;color:var(--accent);">тнР ${s.sp}</p>
    </div>`).join('');
}

// =========== MEDICINES ===========
function renderMeds(){
  document.getElementById('medAcc').innerHTML = MEDICINES.map((m,i)=>`
    <div class="acc-wrap">
      <button class="acc-hdr" onclick="togAcc(${i})" id="ah${i}">${m.crop} <span>тЦ╛</span></button>
      <div class="acc-body" id="ab${i}">
        <div class="m-sec"><h4>ЁЯРЫ рдХреАрдЯ / Insects</h4>${m.pests.map(p=>`<div style="margin-bottom:7px;"><strong style="font-size:12.5px;color:var(--text);">${p.n}:</strong> ${p.m.split(', ').map(x=>`<span class="m-tag">${x}</span>`).join('')}</div>`).join('')}</div>
        <div class="m-sec"><h4>ЁЯНД рд░реЛрдЧ / Diseases</h4>${m.diseases.map(d=>`<div style="margin-bottom:7px;"><strong style="font-size:12.5px;color:var(--text);">${d.n}:</strong> ${d.m.split(', ').map(x=>`<span class="m-tag">${x}</span>`).join('')}</div>`).join('')}</div>
        <div class="m-sec"><h4>ЁЯМ▒ рдЦрд░рдкрддрд╡рд╛рд░ / Weeds</h4><p style="font-size:12.5px;color:var(--text2);">${m.weeds}</p></div>
      </div>
    </div>`).join('');
}
function togAcc(i){ document.getElementById('ab'+i).classList.toggle('open'); document.getElementById('ah'+i).classList.toggle('open'); }

// =========== CONTACTS ===========
function renderContacts(){
  document.getElementById('ctCards').innerHTML = CONTACTS.map(c=>`
    <div class="ct-card">
      <h3>${c.icon} ${c.title}</h3>
      ${c.items.map(it=>`<div class="ct-item"><div class="ct-icon">${it.ic}</div><div><div style="font-size:10.5px;color:var(--text3);">${it.lb}</div><div class="ct-val">${it.v}</div></div></div>`).join('')}
    </div>`).join('');
}

// =========== CHAT ===========
function checkFAQ(q){
  const ql = q.toLowerCase();
  for(const f of FAQ_DB){ if(f.k.some(k=>ql.includes(k))) return f.a; }
  return null;
}
function hKey(e){ if(e.key==='Enter'&&!e.shiftKey){e.preventDefault();sendMsg();} }
function sq(t){ document.getElementById('chatIn').value=t; sendMsg(); }
function addMsg(txt, isUser, off=false){
  const msgs = document.getElementById('chatMsgs');
  const time = new Date().toLocaleTimeString('hi-IN',{hour:'2-digit',minute:'2-digit'});
  const bdg = isUser?'':(off?'<span class="badge badge-off">ЁЯУ┤ Offline</span>':'<span class="badge">тЪб AI</span>');
  msgs.insertAdjacentHTML('beforeend',`
    <div class="msg ${isUser?'user':'bot'}">
      <div class="msg-av">${isUser?'ЁЯСд':'ЁЯМ╛'}</div>
      <div>
        <div class="msg-bbl">${txt.replace(/\n/g,'<br>')}${bdg}</div>
        <div class="msg-time">${time}</div>
      </div>
    </div>`);
  msgs.scrollTop = msgs.scrollHeight;
}
function addTyping(){ document.getElementById('chatMsgs').insertAdjacentHTML('beforeend',`<div class="msg bot" id="typing-ind"><div class="msg-av">ЁЯМ╛</div><div class="msg-bbl"><div class="typing"><span></span><span></span><span></span></div></div></div>`); document.getElementById('chatMsgs').scrollTop=9999; }
function removeTyping(){ document.getElementById('typing-ind')?.remove(); }

async function sendMsg(){
  const inp = document.getElementById('chatIn');
  const txt = inp.value.trim(); if(!txt) return;
  inp.value=''; inp.style.height='auto';
  addMsg(txt, true);
  if(cache[txt]){ addMsg(cache[txt], false); return; }
  const offAns = checkFAQ(txt);
  if(!navigator.onLine){ addMsg(offAns||getDefReply(txt), false, true); return; }
  addTyping();
  try {
    const res = await fetch('https://api.anthropic.com/v1/messages',{
      method:'POST',
      headers:{
        'Content-Type':'application/json',
        'x-api-key':'34abd75be6bb429dece390d5b8cb4c56',
        'anthropic-version':'2023-06-01',
        'anthropic-dangerous-direct-browser-access':'true'
      },
      body: JSON.stringify({
        model:'claude-sonnet-4-20250514',
        max_tokens:450,
        system:`You are Gram Sahayak AI (рдЧреНрд░рд╛рдо рд╕рд╣рд╛рдпрдХ AI), a helpful bilingual assistant for Indian farmers, especially in Uttar Pradesh and North India.

CRITICAL RULES:
1. Always respond in BOTH Hindi AND English (bilingual response)
2. Keep responses SHORT (max 150 words) тАФ low bandwidth environment
3. Use emojis for visual clarity
4. Give practical, actionable advice
5. Mention government schemes (PM-KISAN тВ╣6000/yr, PMFBY crop insurance, KCC loan, PMKSY irrigation, Soil Health Card, PKVY organic тВ╣50k/ha) when relevant
6. Agriculture knowledge: Rabi (Oct-Mar): Wheat, Mustard, Potato, Peas. Kharif (Jun-Oct): Paddy, Maize, Arhar, Groundnut. Zaid (Mar-Jun): Watermelon, Cucumber. UP soil: Alluvial. Common pests & fungicides included.
7. Format with line breaks for easy mobile reading
8. Be warm and respectful to farmers`,
        messages:[{role:'user',content:txt}]
      })
    });
    removeTyping();
    if(res.ok){
      const d = await res.json();
      const reply = d.content[0].text;
      cache[txt] = reply;
      addMsg(reply, false);
    } else {
      addMsg(offAns||getDefReply(txt), false, true);
    }
  } catch(e){ removeTyping(); addMsg(offAns||getDefReply(txt), false, true); }
}

function getDefReply(t){
  const q = t.toLowerCase();
  if(q.includes('рдореМрд╕рдо')||q.includes('weather')) return 'ЁЯМж рдореМрд╕рдо рдЬрд╛рдирдХрд╛рд░реА рдХреЗ рд▓рд┐рдП рдКрдкрд░ "рдореМрд╕рдо" рдЯреИрдм рдкрд░ рдЬрд╛рдПрдВред / Go to the Weather tab above.';
  if(q.includes('рдпреЛрдЬрдирд╛')||q.includes('scheme')) return 'ЁЯПЫ рдпреЛрдЬрдирд╛рдУрдВ рдХреА рдЬрд╛рдирдХрд╛рд░реА рдХреЗ рд▓рд┐рдП "рдпреЛрдЬрдирд╛рдПрдВ" рдЯреИрдм рджреЗрдЦреЗрдВред / Check the Schemes tab.';
  if(q.includes('рд╕реНрд╡рд╛рд╕реНрдереНрдп')||q.includes('health')) return 'ЁЯТК "рд╕реНрд╡рд╛рд╕реНрдереНрдп" рдЯреИрдм рдореЗрдВ рдЬрд╛рдПрдВред рдЖрдкрд╛рддрдХрд╛рд▓: 108 / Check the Health tab. Emergency: 108';
  return `ЁЯМ╛ рдореИрдВ рдЕрднреА рдСрдлрд▓рд╛рдЗрди рд╣реВрдБред рдХреГрдкрдпрд╛ Calendar, Schemes, Health рдФрд░ Soil tabs рджреЗрдЦреЗрдВред\n\nI'm offline. Please check Calendar, Schemes, Health, and Soil tabs for information.`;
}

// =========== ONLINE STATUS ===========
function updOnline(){
  const on = navigator.onLine;
  document.getElementById('sDot').style.background = on?'var(--accent)':'var(--orange)';
  document.getElementById('sTxt').textContent = on?'Online':'Offline';
  document.getElementById('olDot').className = 'ol-dot'+(on?'':' off');
  document.getElementById('olTxt').textContent = on
    ?'тЬЕ Connected тАФ Claude AI active | Offline FAQ database ready'
    :'ЁЯУ┤ Offline Mode тАФ Using local knowledge base | Zero data consumed';
}
window.addEventListener('online', updOnline);
window.addEventListener('offline', updOnline);

// =========== INIT ===========
renderCal();
renderSchemes();
renderHealth();
renderStates();
renderMeds();
renderContacts();
updOnline();

document.getElementById('chatIn').addEventListener('input', function(){
  this.style.height='auto';
  this.style.height=Math.min(this.scrollHeight,90)+'px';
});
document.getElementById('scModal').addEventListener('click', function(e){ if(e.target===this) closeMod(); });
</script>
